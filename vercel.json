{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/generate.ts": {
      "runtime": "@vercel/edge"
    },
    "api/generate-todo.ts": {
      "runtime": "@vercel/edge"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/anthropic_wasm.wasm",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/wasm"
        }
      ]
    }
  ],
  "buildCommand": "pnpm build"
}
